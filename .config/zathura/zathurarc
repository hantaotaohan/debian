# Font
# set font "Inziu Iosevka SC bold 11"
set font "Saber bold 11"

# Map
unmap quit
unmap q
map ;q quit
map ;q q

map = zoom in
map - zoom out
map i recolor
map R rotate

map <C-u> scroll half-up
map <C-d> scroll half-down
map <C-p> scroll up
map <C-n> scroll down


# Options.
set incremental-search    "true"
set smooth-scroll         "true"
set abort-clear-search    "true"
set statusbar-home-tilde  "true"
set adjust-open           "width"
#set window-height         "566"
#set window-width          "690"
set window-title-basename "true"
set first-page-column     "1:1"
set selection-clipboard   clipboard


# Base16 OneDark
set default-bg                  "#282c34"
set default-fg                  "#353b45"

set statusbar-fg                "#ABB2BF"
set statusbar-bg                "#282c34"

set inputbar-bg                 "#282c34"
set inputbar-fg                 "#ABB2BF"

set notification-bg             "#282c34"
set notification-fg             "#ABB2BF"

set notification-error-bg       "#282c34"
set notification-error-fg       "#e06c75"

set notification-warning-bg     "#282c34"
set notification-warning-fg     "#e06c75"

set highlight-color             "#e5c07b"
set highlight-active-color      "#61afef"

set completion-bg               "#353b45"
set completion-fg               "#61afef"

set completion-highlight-fg     "#c8ccd4"
set completion-highlight-bg     "#61afef"

set recolor-lightcolor          "#282c34"
set recolor-darkcolor           "#b6bdca"

set recolor                     "true"
set recolor-keephue             "false"


# ---------- Bookmark Bindings
# Set Mark Bindings
map m1 feedkeys ":bmark 1<Return>"
map m2 feedkeys ":bmark 2<Return>"
map m3 feedkeys ":bmark 3<Return>"
map m4 feedkeys ":bmark 4<Return>"
map m5 feedkeys ":bmark 5<Return>"
map m6 feedkeys ":bmark 6<Return>"
# Goto Mark Bindings
map '1 feedkeys ":blist 1<Return>"
map '2 feedkeys ":blist 2<Return>"
map '3 feedkeys ":blist 3<Return>"
map '4 feedkeys ":blist 4<Return>"
map '5 feedkeys ":blist 5<Return>"
map '6 feedkeys ":blist 6<Return>"
