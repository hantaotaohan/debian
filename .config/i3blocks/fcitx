#!/usr/bin/env bash

# ================================================================================================================================
#
#                                                          FCITX STATUS                                                          
#
#                                                       Update: 2023.01.16                                                      
#
# ================================================================================================================================

STATUS="$(fcitx-remote)"

if [ "$STATUS" = 0 ]; then
    OUT="Off"
elif [ "$STATUS" = 1 ]; then
    OUT="US"
else
    OUT="CN"
fi

echo "$OUT"
