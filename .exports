    --no-mouse
    --keep-right
    --height=60%
    --inline-info
    --border=rounded
    --no-separator
    --preview-window=hidden

    --marker='*'
    --pointer='> '
    --prompt='SEARCH: '
    --bind '?:toggle-preview'
