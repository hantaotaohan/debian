    --exclude .git \
    --exclude boot \
    --exclude lib \
    --exclude lib64 \
    --exclude lost+found \
    --exclude opt \
    --exclude proc \
    --exclude root \
    --exclude run \
    --exclude sbin \
    --exclude srv \
    --exclude sys \
    --exclude tmp \
    --exclude var
"

export FZF_DEFAULT_OPTS="
    --ansi
    --exact
    --multi
    --cycle
    --exit-0
