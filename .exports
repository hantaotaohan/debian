export FZF_CTRL_R_OPTS="--sort --exact --preview 'echo {}' --height=50% --preview-window down:3:hidden:wrap --bind '?:toggle-preview,Ctrl-j:down,Ctrl-k:up,J:preview-down,K:preview-up'" 

