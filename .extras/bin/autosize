#!/usr/bin/env python3

import i3ipc


def on(i3, e):
    i3 = i3ipc.Connection()
    workspace = i3.get_tree().find_focused().workspace().num
    wclass = e.container.window_class
    if wclass in ['Microsoft-edge-dev', 'St'] and workspace == 3:
        e.container.command('resize set 60 ppt 90 ppt')


i3 = i3ipc.Connection()

i3.on('window::focus', on)

try:
    i3.main()
finally:
    i3.main_quit()
