[alias]
    a      = add
    aa     = add -A
    b      = branch
    ba     = branch -a
    c      = commit -m
    ca     = commit -am
    co     = checkout
    lg     = log --graph --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'
    lga    = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date = relative
    s      = status -sb
    sclone = clone --depth 1
    undo   = reset HEAD~1
    d      = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
    di     = !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"
    dv     = difftool --tool=vimdiff -y
    dvs    = difftool --staged --tool=vimdiff -y
    dvc    = difftool --cached --tool=vimdiff -y
    ds     = diff --stat
    w      = whatchanged

[user]
    email = hantaotaohan@gmail.com 
    name  = hantaotaohan

[core]
    editor   = vim
    autocrlf = false
    pager    = diff-so-fancy | less --tabs=4 -RFX

[log]
    date = format:%A %Y-%m-%d %H:%M:%S

[merge]
    tool = vimdiff

[http]
    sslVerify = false

[color]
    ui   = always
    diff = always

[color "diff"]
    meta       = 5  0 bold
    commit     = 15 0 bold
    frag       = 5  0 bold
    old        = 1  0 bold
    new        = 2  0 bold
    whitespace = 3  0 reverse

[color "diff-highlight"]
    oldNormal    = 1 0 bold
    oldHighlight = 0 1 bold 
    newNormal    = 2 0 bold
    newHighlight = 0 2 bold

[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green

[color "status"]
    added     = green
    changed   = yellow
    untracked = red

[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4 -RFX

[interactive]
    diffFilter = "diff-so-fancy --patch"

[diff-so-fancy]
    stripLeadingSymbols  = false
    changeHunkIndicators = true
    markEmptyLines       = false
    useUnicodeRuler      = true

[url "git@github.com:"]
    insteadOf     = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
    insteadOf = "github:"

[url "git@gist.github.com:"]
    insteadOf     = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
    insteadOf = "gist:"

[init]
    defaultBranch = main
